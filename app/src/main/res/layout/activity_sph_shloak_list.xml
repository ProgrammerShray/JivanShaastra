<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHero"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sph_home2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSphHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="SPH"
        android:textColor="#D4A017"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardHero" />

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:background="#D4A017"
        app:layout_constraintEnd_toEndOf="@+id/tvSphHeader"
        app:layout_constraintStart_toStartOf="@+id/tvSphHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvSphHeader" />

    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSphHeader">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/sph_shlok1.1"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="SHLOK 1.1"
                android:textColor="#1A237E"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/sph_shlok1.2"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="SHLOK 1.2"
                android:textColor="#1A237E"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sph_shlok1.3"
                android:layout_marginStart="24dp"
                android:text="SHLOK 1.3"
                android:textColor="#1A237E"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="#6C63FF"
        app:fabCustomSize="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>